FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-12;
        relTol          0.001;
        minIter         2;
        maxIter         100;
        smoother        GaussSeidel;
	nPreSweeps       1;
        nPostSweeps      3;
        nFinestSweeps    3;
        scaleCorrection true;
        directSolveCoarsest false;
        cacheAgglomeration on;
        nCellsInCoarsestLevel 20;    // 500
        agglomerator     faceAreaPair;
        mergeLevels      1;    // 3
    }

    "(U|k|omega)"
    {
        solver          PBiCG;
	    preconditioner	DILU
        //smoother        symGaussSeidel;
        minIter			1;
        maxIter			20;
        tolerance       1e-15;
        relTol          0.01;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;
    pRefCell       0;
    pRefValue       1;

    residualControl
    {
        p               1e-15;
        U               1e-15;
        "(k|epsilon|omega|f|v2)" 1e-15;
    }
}

relaxationFactors
{
    equations
    {
        U       0.5; // 0.9 is more stable but 0.95 more convergent
		p		0.5;         
		".*"    0.7; // 0.9 is more stable but 0.95 more convergent
    }
}


